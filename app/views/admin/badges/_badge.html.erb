<tr>
  <td><%= badge.title %></td>
  <td><%= badge.image %></td>
  <td><%= badge.rule %></td>
  <td><%= badge.description %></td>
  <td><%= badge.operand %></td>
  <td><%= link_to 'Show', admin_badge_path(badge) %></td>
  <td><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
  <td><%= link_to 'Delete', admin_badge_path(badge),
                            method: :delete,
                            data: { confirm: 'Are you sure?'} %></td>
</tr>
